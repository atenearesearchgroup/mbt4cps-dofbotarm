grammar org.xtext.CPtester with org.xtext.Operations

generate cPtester "http://www.xtext.org/CPtester"

Scenario:
	'Scenario' surname=STRING
	'{'
		given=Given
		(andGiven+=And)*
		//andGiven=AndGiven?
		when=When
		then=Then
		(and+=And)+
	'}'
;


//////////////////////////////////////////////////

Given:
	name='GIVEN'
	(initial+=Initial)
;



//////////////////////////////////////////////////

When:
	name='WHEN'
	(command+=Command)
;


//////////////////////////////////////////////////

Then:
	name='THEN'
	(result+=Result)
;

//////////////////////////////////////////////////

And:
	name='AND'
	(conditions+=Conditions)
	'Query' (solution+=Solution)
	'returns' state=State
;

