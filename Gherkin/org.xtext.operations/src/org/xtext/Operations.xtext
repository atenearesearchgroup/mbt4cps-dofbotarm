grammar org.xtext.Operations with org.eclipse.xtext.common.Terminals

generate operations "http://www.xtext.org/Operations"



Operaciones:
	Initial | Command | Result | Solution | Conditions
;




//////////////////////////////////////////////////////////////////////////////////////////////////

Initial:
	name='posInicial'
	'('
	(time+=Time)
	')'
;


//////////////////////////////////////////////////////////////////////////////////////////////////

Command:
	rotateServo | rotateAllServos
;

rotateServo:
	name='rotateServo'
	'('
	(servo+=Servo)
	','
	(angle+=Angle)
	','
	(time+=Time)
	')'
;

rotateAllServos:
	name='rotateAllServos'
	'('
	(angle+=Angle)+ //Poner multiples atributos
	','
	(time+=Time)
	')'
;


//////////////////////////////////////////////////////////////////////////////////////////////////



Result:
	name='result'
	'('
	(time+=Time)
	')'
;

//////////////////////////////////////////////////////////////////////////////////////////////////


Solution:
	isAtSingle | isAt
;

Conditions:
	name='NotLaterThan'
	'('
	(time+=Time)
	')'
;

isAtSingle:
	name='isAtSingle'
	'('
	(servo+=Servo)
	','
	(angle+=Angle)
	','
	(angle_res+=Angle_res)
	')'
;

isAt:
	name='isAt'
	'('
	(angle+=Angle)+
	','
	(angle_res+=Angle_res)
	')'
;


//////////////////////////////////////////////////////////////////////////////////////////////////



Angle_res:
	angle_res=INT
;


Angle:
	angle=INT
;

Time:
	time=INT
;


Servo:
	servo=INT
;