grammar lsi.us.es.mis.xtext.MyWorldDsl with org.eclipse.xtext.common.Terminals

generate myWorldDsl "http://www.us.lsi/es/mis/xtext/MyWorldDsl"

World:
	(spaces+=Space)*
;
	
Space:
	Continent | Water
;
	
Water:
	Ocean | Lake | Sea
;

Ocean:
	'Ocean' name=ID
	'{'
	'area:' area += DOUBLE
	'cc:' cc += DOUBLE
	(washes+=Country)*
;

Lake:
	'Lake' name=ID
	'{'
	'area:' area += DOUBLE
	'cc:' cc += DOUBLE
	(washes+=Country)*
;

Sea:
	'Sea' name=ID
	'{'
	'area:' area += DOUBLE
	'cc:' cc += DOUBLE
	('washes:' washes=[Country])*
;
	
Continent:
	'Continent' name=ID
	'{'
	'area:' area += DOUBLE
	(countries+=Country)*
	'}'
;

Country:
	'Country' name=ID
	'{'
	'area:' area += DOUBLE
	(peaceful?='peaceful')?
	'population:' population += DOUBLE
	//('borders:' borders=[Country])*
	('borders:' borders+=Border)?
	('washedBy:' washedBy=[Water])*
	'}'
;

Border:
	(borders+=[Country])*
;



terminal DOUBLE:
	('-'' '*)? INT ('.' INT)?
;