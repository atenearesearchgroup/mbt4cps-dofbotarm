grammar lsi.us.es.mis.xtext.MyWorldDsl with org.eclipse.xtext.common.Terminals

generate myWorldDsl "http://www.us.lsi/es/mis/xtext/MyWorldDsl"

World:
	(spaces+=Space)*
;
	
Space:
	Continent | Water
;
	
Water:
	Ocean | Lake | Sea
;

Ocean:
	'Ocean' name=ID
	'{'
	'area (sq km):' area = DOUBLE
	'volume (cu km):' ck = DOUBLE
	'}'
;

Lake:
	'Lake' name=ID
	'{'
	'area (sq km):' area = DOUBLE
	'volume (cu km):' ck = DOUBLE
	'}'
;

Sea:
	'Sea' name=ID
	'{'
	'area (sq km):' area = DOUBLE
	'volume (cu km):' ck = DOUBLE
	'}'
;
	
Continent:
	'Continent' name=ID
	'{'
	'area (sq km):' area = DOUBLE
	(countries+=Country)*
	'}'
;

Country:
	'Country' name=ID
	'{'
	'area (sq km):' area = DOUBLE
	(peaceful='peaceful')?
	'population:' population = DOUBLE
	('borders:' (borders+=[Country])*)?
	('washedBy:' (washedBy+=[Water])*)?
	'}'
;

terminal DOUBLE:
	('-'' '*)? INT ('.' INT)?
;